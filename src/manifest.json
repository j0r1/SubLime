{
  "manifest_version": 2,

  "name": "SubLime",
  "description": "Show subroutines synced to HTML5 video",
  "version": "1.3.1",

  "homepage_url": "https://sub-lime.appspot.com/",
  "permissions": [ "activeTab" ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [ "FileSaver.js", "jquery.min.js", "sublimelet.js", "sublime.css",
				"vex-theme-wireframe.css", "vex.css",
				"vex.dialog.js", "vex.js" ]
}

